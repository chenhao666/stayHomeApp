/* pages/order/selectAddress/selectAddress.wxss */
page{
  background-color: #f7f8fa;
  padding-bottom: 88rpx; 
}
.main{
  width: 100%;
  margin-top: 19rpx;
  overflow: hidden;
}
.header{
  width: 100%;
  height: 120rpx;
  background-color: #ffffff;
  padding-top: 23rpx;
  padding-left: 42rpx;
  position: relative;
  box-sizing: border-box;
  margin-top: 1rpx;
  -webkit-transform: translateX(0rpx);
  transform: translateX(0rpx); 
  -webkit-transition: all 0.4s;
  transition: all 0.4s;
}

.header-active{
  -webkit-transform: translateX(-120rpx);
  transform: translateX(-120rpx); 
  -webkit-transition: all 0.4s;
   transition: all 0.4s;
}
.header-item{
  width:590rpx;
  height:100rpx;
}
.delete{
  background-color:red;
  width:120rpx;
  display:flex;
  flex-direction:column;
  align-items:center;
  justify-content:center;
  color:#ffffff;
  font-size: 32rpx;
  text-align:center;
  height:120rpx;
  line-height:120rpx;
  position:absolute;
  top:0;
  right:-120rpx;
}
.person{
  font-family: PingFang-SC-Bold;
  font-weight: bold;
  font-size: 26rpx;
  width: 500rpx;
}
.header_name{
  color: #3B3B3B;
}
.header_tel{
  margin-left: 14rpx;
  color: #3F3F3F;
}
.address{
  font-size: 0;
}
.address text{
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  font-family: PingFang-SC-Medium;
  font-weight: Medium;
  width: 500rpx;
  font-size: 22rpx;
  color: #3F3F3F;
  line-height: 22rpx;
  height: 22rpx;
  margin-top: 19rpx;
  float: left;
}
.header_right{
  position: absolute;
  top: 0rpx;
  right:0rpx;
  width:110rpx;
  text-align:center;
  height:120rpx;
  line-height:118rpx;
}
.right_icon{
  width: 30rpx;
  height: 29rpx;
}
.footer{
  width: 100%;
  height: 88rpx;
  background-color: #ffffff;
  position: fixed;
  bottom:0;
}
.add image{
  width: 35rpx;
  height: 35rpx;
  position: absolute;
  top: 28rpx;
  left: 282rpx;
}
.content{
  padding: 22rpx 0 0 330rpx;
}
.no_net{
  text-align: center;
  margin-top: 351rpx;
}
.no_net image{
  width: 144rpx;
  height: 90rpx;
}
.no_net view{
  font-family: PingFang-SC-Medium;
  font-weight: Medium;
  color: #A2A2A2;
  font-size:24rpx;
  margin-top: 32rpx;
}
.no_address{
  text-align: center;
  margin-top: 327rpx;
}
.no_address image{
  width: 153rpx;
  height: 114rpx;
}
.no_address view{
  font-family: PingFang-SC-Medium;
  font-weight: Medium;
  color: #A2A2A2;
  font-size: 24rpx;
  margin-top: 32rpx;
}
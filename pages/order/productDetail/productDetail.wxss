.container{
  position: relative;
}
swiper,.slide-image{
  width: 100%;
  height: 750rpx;
}
.number{
  width: 60rpx;
  height: 36rpx;
  line-height: 36rpx;
  text-align: center;
  background-color: #000000;
  border-radius: 18rpx;
  opacity: 0.5;
  color: #FFFFFF;
  position: absolute;
  top:22rpx;
  font-size: 22rpx;
  right: 21rpx;
}

.type{
  width: 100%;
  padding:30rpx 50rpx;
  text-align: left;
  margin-left: 50rpx;
}
.first{
  margin-bottom: 8rpx;
  font-family: PingFang-SC-Bold;
  font-weight: Bold;
  font-size: 30rpx;
}
.first-left{
  color: #3F3F3F;
}
.first-right{ 
  color: #FF4835;
  float:right;
  margin-right:50rpx;
}
.second{
  margin-top: 20rpx;
  font-family: PingFang SC;
  font-size: 24rpx;
}
.second-left{
  display: block;
  float: left;
  width: 100rpx;
  color: #8E8E8E;
  font-weight: Medium;
}
.second-right{
  display: block;
  float: left;
  width: 500rpx;
  color: #3B3B3B;
  font-weight: Medium;
}
.programmeList{
  width: 100%;
  box-sizing: border-box; 
  background: #F7F8FA;
}
.programmeList .item{
  width: 100%;
  margin-top: 20rpx;
  background: #ffffff;
  padding: 20rpx 20rpx;
  box-sizing: border-box;
}
.programmeList .item:first-child{
  margin-top: 0rpx;
}
.programmeList image{
  display: block;
  width: 100%;
  height: 360rpx;
}
.describe{
  margin-top: 20rpx;
}
.describe .title{
  display: block;
  width: 100%;
  font-size: 30rpx;
  font-weight: bold;
  color: #3F3F3F;
}
.describe .content{
  display: block;
  width: 100%;
  word-break: break-all;
  white-space: normal;
  margin-top: 16rpx;
  color: #5F5F5F;
  font-size: 24rpx;
  text-indent: 48rpx;
  line-height: 36rpx;
}
/* pages/chat/chat.wxss */
page{
  background: #f7f8fa;
  padding-bottom:40rpx; 
}
.chatList{
  width: 100%;
  margin-top: 20rpx;
  background: #ffffff;
}
.chatList .item{
    height: 145rpx;
    padding: 30rpx;
    box-sizing: border-box;
    margin-top: 1rpx;
}
.box{
  float: left;
  width: 84rpx;
  height: 84rpx;
  position: relative;
}
.chatList .item image{
  width: 84rpx;
  height: 84rpx;
  border-radius: 8rpx;
}
.num{
  display: block;
  position: absolute;
  width: 30rpx;
  height: 30rpx;
  top: -10rpx;
  right: -10rpx;
  background: #F2CD0B;
  color:#ffffff;
  font-size: 22rpx;
  border-radius: 50%;
  line-height: 30rpx;
  text-align: center;
}
.info{
  float: left;
  width: 300rpx;
  margin-left: 20rpx;
}
.chat_user{
  width: 100%;
  font-size:32rpx;
  font-weight: bold;
  color:#3F3F3F;
}
.content{
  width: 100%;
  overflow: hidden;
  white-space: nowrap;
  color:#8E8E8E;
  font-size:  26rpx;
  margin-top: 15rpx;
  text-overflow: ellipsis;
}
.time{
  float: right;
  font-size: 20rpx;
  color: #8E8E8E;
}
.empty{
  width: 100%;
  height: 84rpx;
  text-align: center;
  line-height: 84rpx;
  font-size: 26rpx;
  color: #787878;
  margin-top: 40rpx;
}
/* pages/index/index.wxss */
.header{
  width: 100%;
  height: 55rpx;
}
.logo{
  width: 154rpx;
  height: 55rpx;
  float: left;
  margin-left: 30rpx;
}
.location{
  display: inline-block;
  position: relative;
  float: left;
  margin-left: 28rpx;
  font-size: 22rpx;
  margin-top: 29rpx;
}

.location image{
  position: absolute;
  bottom: 4rpx;
  right: -10rpx;
  width: 6rpx;
  height: 6rpx;
}
.chat{
  float: right;
  margin-right: 19rpx
}
.chat image{
  width: 30rpx;
  height: 28rpx;
  margin-top: 10rpx;
}
.banner{
  width: 100%;
  height: 560rpx;
  margin-top: 10rpx;
  overflow: hidden;
  background: #ccc;
}
.banner swiper-item,.banner swiper-item image{
  width: 100%;
  height: 560rpx;
}
.tab{
  width: 100%;
  height: 90rpx;
  background: #F7F8FA;
  display: flex;
  flex-direction:row;
  justify-content:space-between;
  text-align: center;
  line-height: 80rpx;
  font-size: 28rpx;
  font-weight: bold;
}
.tab .item{
  text-align: center;
  width: 33.3%;
  color: #8E8E8E;
  position: relative;
}
.tab .item.select{
  color: #3F3F3F;
}
.tab .item image{
  width: 100%;
  height: 90rpx;
}
.tab .item text{
  position: absolute;
  top: 0px;
  left: 0px;
  width: 100%;
  height: 90rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.fixedTab{
  position: fixed;
  top: 0px;
  z-index: 99;
}
.programmeList{
  width: 100%;
  height: 100%;
}